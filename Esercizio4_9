public class InvertiStringa {
    public static void main(String[] args) {

        //si scriva un ciclo che crei una nuova stringa che corrisponde all' inversione di una stringa data

        String str = "esempio";
        String inversa = "";

        for (int i = str.length() - 1; i >= 0; i--) {
            inversa += str.charAt(i);
        }

        System.out.println("La stringa originale è: " + str);
        System.out.println("La stringa invertita è: " + inversa);
    }
}