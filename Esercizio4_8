public class ContaSpazi {
    public static void main(String[] args) {

        // si scriva un ciclo che conti il numero di caratteri di spaziatura in una stringa data

        String str = "Questa è una stringa di esempio";
        int conteggioSpazi = 0;


        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ' ') {
                conteggioSpazi++;
            }
        }

        System.out.println("Il numero di spazi nella stringa è: " + conteggioSpazi);
    }
}